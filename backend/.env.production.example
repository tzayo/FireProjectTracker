# Production Environment Configuration
# Copy this file to .env for production deployment

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False  # NEVER set to True in production
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_STRING_IN_PRODUCTION

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database Configuration - Use PostgreSQL in production
# DATABASE_URL=postgresql://username:password@localhost:5432/fire_department
DATABASE_URL=sqlite:///fire_department.db

# CORS Configuration - Set to your actual domain(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security - Generate a secure secret key with:
# python -c "import secrets; print(secrets.token_hex(32))"

# Map Configuration
DEFAULT_MAP_LAT=31.4117
DEFAULT_MAP_LON=34.6667
DEFAULT_MAP_ZOOM=13

# Alert Thresholds
HYDRANT_INSPECTION_MONTHS=6
EQUIPMENT_EXPIRY_WARNING_DAYS=30
PROXIMITY_DISTANCE_METERS=100

# ⚠️ PRODUCTION SECURITY CHECKLIST:
# [ ] Generate and set a strong SECRET_KEY
# [ ] Set FLASK_DEBUG=False
# [ ] Set CORS_ORIGINS to your actual domain
# [ ] Use PostgreSQL instead of SQLite
# [ ] Set up HTTPS/SSL
# [ ] Configure firewall rules
# [ ] Set up automated backups
# [ ] Enable rate limiting
# [ ] Add authentication
