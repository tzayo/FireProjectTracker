# Flask Backend Environment Configuration
# Copy this file to .env and update with your settings

# Flask Configuration
FLASK_ENV=development  # development or production
FLASK_DEBUG=False      # Set to False in production
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///fire_department.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/fire_department

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# For production, set to your domain:
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_hex(32))"
# SECRET_KEY should be a long random string in production

# Optional: Map Configuration (default center coordinates)
DEFAULT_MAP_LAT=31.4117
DEFAULT_MAP_LON=34.6667
DEFAULT_MAP_ZOOM=13

# Optional: Alert Thresholds
HYDRANT_INSPECTION_MONTHS=6
EQUIPMENT_EXPIRY_WARNING_DAYS=30
PROXIMITY_DISTANCE_METERS=100
