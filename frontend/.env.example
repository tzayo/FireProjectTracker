# Frontend Environment Configuration
# Copy this file to .env and update with your settings

# API URL - Backend endpoint
REACT_APP_API_URL=http://localhost:5000/api

# For production, set to your backend domain:
# REACT_APP_API_URL=https://api.yourdomain.com/api

# Map Configuration (optional - defaults are in components)
REACT_APP_MAP_CENTER_LAT=31.4117
REACT_APP_MAP_CENTER_LON=34.6667
REACT_APP_MAP_ZOOM=13

# Application Info
REACT_APP_NAME=Fire Safety Management System
REACT_APP_VERSION=2.0
